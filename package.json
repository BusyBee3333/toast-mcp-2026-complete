{
  "name": "@busybee3333/toast-mcp-server",
  "version": "1.0.0",
  "description": "Complete MCP server for Toast restaurant POS/management platform with 50+ tools and 18 React apps",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "toast-mcp-server": "./dist/main.js"
  },
  "scripts": {
